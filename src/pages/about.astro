---
// Components
import Breadcrumbs from '@/components/base/Breadcrumbs.astro'
import PageHead from '@/components/posts/base/PageHead.astro'

// Layouts
import Layout from '@/layouts/Layout.astro'
---

<!-- OUTLINE (basically it should be a ME page)
  - Hero Section With SubSection and text
  - Image Gallery of Me (bento box style)
-->
<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />
  <div class="about-page flex flex-col gap-y-8">
    <!-- Header section with profile photos -->
    <section
      class="bg-grid-pattern flex flex-col items-center gap-6 p-6 pb-0 text-center"
    >
      <div class="relative flex items-center justify-center">
        <!-- one Profile -->
        <div
          class="group relative z-0 w-fit -rotate-2 bg-white p-2 pb-10 shadow-lg transition-all duration-300 hover:scale-105 hover:rotate-[-4deg] hover:shadow-xl"
        >
          <img
            src="/hero/1.png"
            alt="Sedhu Madhav"
            class="relative block h-auto w-48 border border-gray-200"
          />
          <p
            class="font-caveat text-md absolute bottom-2 left-1/2 -translate-x-1/2 whitespace-nowrap text-gray-800"
          >
            me again :)
          </p>
        </div>
        <!-- two Profile -->
        <div
          class="group relative z-10 -ml-8 w-fit translate-y-14 rotate-2 bg-white p-2 pb-10 shadow-lg transition-all duration-300 hover:scale-105 hover:rotate-4 hover:shadow-xl"
        >
          <img
            src="/hero/2.png"
            alt="Infinull logo"
            class="relative block h-auto w-32 border border-gray-200"
          />
          <p
            class="font-caveat absolute bottom-2 left-1/2 -translate-x-1/2 text-xs whitespace-nowrap text-gray-800"
          >
            the other me
          </p>
        </div>
      </div>
      <h1 class="font-bon-vivant pt-4 text-8xl font-bold">
        who's <br />
        <span class="text-accent -mt-10 block font-sans text-7xl font-black"
          >Shyne?</span
        >
      </h1>
    </section>

    <!-- About Me Section -->
    <section>
      <div>
        <p class="prose prose-sm text-muted-foreground max-w-none">Content</p>
      </div>
    </section>

    <!-- Skills Section -->
    <section>
      <h2 class="font-bon-vivant text-accent mb-4 text-5xl font-semibold">
        skills, <span class="text-foreground font-sans text-4xl">you ask?</span>
      </h2>

      <p class="prose prose-sm text-muted-foreground max-w-3xl leading-relaxed">
        Content
      </p>
    </section>

    <!-- Interests Section -->
    <section>
      <h2 class="text-accent font-bon-vivant mb-4 text-6xl font-semibold">
        <span class="relative -top-1 inline-block">hobbies</span>
        <span class="text-foreground font-sans text-4xl">& stuff</span>
      </h2>

      <p class="text-muted-foreground max-w-3xl leading-relaxed">Content</p>
    </section>
  </div>
</Layout>
