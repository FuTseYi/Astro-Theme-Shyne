---
import Link from '@/components/base/Link.astro'
import SocialIcons from '@/components/base/SocialIcons.astro'
import { FOOTER_LINKS, SOCIAL_LINKS } from '@/config'
import { Icon } from 'astro-icon/components'
---

<footer class="font-pp-editorial-new mt-1 pt-1">
  <div
    class="text-muted-foreground mt-4 flex flex-wrap justify-center gap-x-6 gap-y-1 px-6 pb-4 text-sm font-medium sm:px-8"
  >
    {
      FOOTER_LINKS.map((link) => (
        <Link
          href={link.href}
          class="hover:text-accent flex items-center gap-1.5 transition-colors"
        >
          {link.icon && <Icon name={link.icon} class="size-4" />}
          {link.label}
        </Link>
      ))
    }
  </div>
  <div
    class="mx-auto mb-8 flex max-w-screen-md flex-col items-center justify-center gap-2 text-center sm:mb-6"
  >
    <div class="mt-2">
      <SocialIcons links={SOCIAL_LINKS} />
    </div>

    <p class="text-muted-foreground mt-2">
      &copy; {new Date().getFullYear()} ・ Crafted with by
      <Link href="/about" class="text-accent transition-colors" underline
        >FuTseYi</Link
      >
    </p>
  </div>

  <div class="m-0 flex w-full justify-center p-0">
    <!-- footer Astro-Theme-Shyne typography -->
    <div
      class="text-accent pointer-events-none m-0 p-0 text-center leading-none font-bold whitespace-nowrap select-none"
      style="font-size: clamp(0rem, 5vw, 12.4rem); transform: translateY(30%);"
    >
      Astro-Theme-Shyne
    </div>
  </div>
  <div class="relative -mt-8 w-full overflow-hidden" style="height: 120px;">
    <!-- 波浪动画效果 -->
    <svg
      class="absolute bottom-0 left-0 w-full"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 120"
      preserveAspectRatio="none"
      style="height: 120px;"
    >
      <!-- 第一层波浪 -->
      <path
        d="M0,64 C240,100 480,48 720,64 C960,80 1200,32 1440,64 L1440,120 L0,120 Z"
        fill="var(--accent)"
        opacity="0.2"
        class="wave-path-1"
      >
        <animate
          attributeName="d"
          dur="8s"
          repeatCount="indefinite"
          values="
            M0,64 C240,100 480,48 720,64 C960,80 1200,32 1440,64 L1440,120 L0,120 Z;
            M0,48 C240,32 480,80 720,48 C960,32 1200,100 1440,48 L1440,120 L0,120 Z;
            M0,64 C240,100 480,48 720,64 C960,80 1200,32 1440,64 L1440,120 L0,120 Z
          "
        ></animate>
      </path>

      <!-- 第二层波浪 -->
      <path
        d="M0,80 C240,64 480,96 720,80 C960,64 1200,96 1440,80 L1440,120 L0,120 Z"
        fill="var(--accent)"
        opacity="0.3"
        class="wave-path-2"
      >
        <animate
          attributeName="d"
          dur="6s"
          repeatCount="indefinite"
          values="
            M0,80 C240,64 480,96 720,80 C960,64 1200,96 1440,80 L1440,120 L0,120 Z;
            M0,96 C240,80 480,64 720,96 C960,80 1200,64 1440,96 L1440,120 L0,120 Z;
            M0,80 C240,64 480,96 720,80 C960,64 1200,96 1440,80 L1440,120 L0,120 Z
          "
        ></animate>
      </path>

      <!-- 第三层波浪 -->
      <path
        d="M0,100 C240,108 480,92 720,100 C960,108 1200,92 1440,100 L1440,120 L0,120 Z"
        fill="var(--accent)"
        opacity="0.5"
        class="wave-path-3"
      >
        <animate
          attributeName="d"
          dur="10s"
          repeatCount="indefinite"
          values="
            M0,100 C240,108 480,92 720,100 C960,108 1200,92 1440,100 L1440,120 L0,120 Z;
            M0,92 C240,100 480,108 720,92 C960,100 1200,108 1440,92 L1440,120 L0,120 Z;
            M0,100 C240,108 480,92 720,100 C960,108 1200,92 1440,100 L1440,120 L0,120 Z
          "
        ></animate>
      </path>
    </svg>
  </div>
</footer>
