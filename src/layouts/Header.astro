---
import Link from '@/components/base/Link.astro'
import ThemeToggle from '@/components/base/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/config'
import { Icon } from 'astro-icon/components'
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <img src="/favicon/logo.png" alt="Logo" class="size-5 sm:size-6" />
      <span
        class="hidden h-full text-lg leading-none font-medium min-[440px]:block"
        >{SITE.title}</span
      >
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-4 text-sm sm:gap-6">
        {
          NAV_LINKS.map((item) => {
            const baseClass =
              'text-foreground/60 hover:text-foreground capitalize transition-colors flex items-center gap-1.5'

            // Build hide class with arbitrary breakpoint if hideBelowPx is set
            let linkClass = baseClass
            if (item.hideBelowPx) {
              // Use template literal to create Tailwind arbitrary value
              const breakpoint = item.hideBelowPx
              linkClass = `hidden min-[${breakpoint}px]:flex text-foreground/60 hover:text-foreground capitalize transition-colors items-center gap-1.5`
            }

            return (
              <Link href={item.href} class={linkClass}>
                {item.icon && <Icon name={item.icon} class="size-4" />}
                {item.label}
              </Link>
            )
          })
        }
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
