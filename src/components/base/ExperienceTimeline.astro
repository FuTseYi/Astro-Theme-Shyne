---
// Astro
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

// Components
import Link from './Link.astro'

// Utils & Types
import { cn } from '@/lib/utils'
import type { CollectionEntry } from 'astro:content'

interface Props {
  experiences: CollectionEntry<'experience'>[]
}

const { experiences } = Astro.props

// 格式化日期函数
const formatDate = (date: Date | null | undefined): string => {
  if (!date) return ''
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
  }).format(date)
}

const getDateRange = (exp: CollectionEntry<'experience'>) => {
  const start = formatDate(exp.data.startDate)
  if (!start) return ''

  const end = formatDate(exp.data.endDate)
  if (end) {
    return `${start} - ${end}`
  }

  // 如果没有 endDate，显示 Present
  return `${start} - Present`
}

const isCurrentExperience = (exp: CollectionEntry<'experience'>) => {
  return !exp.data.endDate
}

const sortedExperiences = experiences.sort((a, b) => {
  if (isCurrentExperience(a) && !isCurrentExperience(b)) return -1
  if (!isCurrentExperience(a) && isCurrentExperience(b)) return 1

  const orderA = a.data.order ?? 0
  const orderB = b.data.order ?? 0
  return orderB - orderA
})
---

<div class="space-y-8">
  {
    sortedExperiences.map((exp, index) => {
      return (
        <div class="relative">
          {index < sortedExperiences.length - 1 && (
            <div
              class="bg-border absolute top-14 bottom-[-2rem] left-[19px] w-px"
              aria-hidden="true"
            />
          )}

          <div class="flex gap-5">
            {/* Company Logo */}
            <Link
              href={exp.data.companyUrl!}
              external
              class="relative block shrink-0"
            >
              <div
                class={cn(
                  'border-border z-10 flex h-10 w-10 items-center justify-center overflow-hidden rounded-full border',
                  isCurrentExperience(exp) &&
                    'shadow-primary/20 shadow-lg dark:shadow-none',
                )}
              >
                <Image
                  src={exp.data.companyLogo!}
                  alt={exp.data.company}
                  width={40}
                  height={40}
                  class="bg-background dark:bg-border h-full w-full object-contain p-1.5 transition-opacity hover:opacity-80"
                />
              </div>
            </Link>

            <div class="min-w-0 flex-1">
              <div class="space-y-1">
                {/* Role Name */}
                <div class="flex items-start justify-between gap-4">
                  <h3 class="text-foreground text-lg leading-tight font-semibold">
                    {exp.data.role}
                  </h3>
                  {isCurrentExperience(exp) && (
                    <span class="inline-flex items-center gap-1 rounded-full border border-green-500/20 bg-green-500/10 px-2 py-0.5 text-xs font-medium text-green-600 dark:text-green-400">
                      <span class="h-1.5 w-1.5 rounded-full bg-green-500 dark:bg-green-400" />
                      Active
                    </span>
                  )}
                </div>

                {/* Company Name */}
                <p class="text-muted-foreground text-sm">{exp.data.company}</p>

                {/* Period and Location */}
                <p class="text-muted-foreground text-sm">
                  <span class="font-semibold">{getDateRange(exp)}</span>
                  <span class="mx-2">·</span>
                  {exp.data.location}
                </p>
              </div>

              {/* Description */}
              <p class="text-muted-foreground/90 mt-2 text-sm leading-relaxed">
                {exp.data.description}
              </p>

              {/* Tags */}
              {exp.data.tags && exp.data.tags.length > 0 && (
                <div class="mt-4 flex flex-wrap gap-2">
                  {exp.data.tags.map(
                    (tag: { icon?: string; label: string }) => (
                      <span class="bg-muted/90 text-muted-foreground/80 inline-flex items-center gap-1.5 rounded-full px-2 py-0.5 text-xs">
                        {tag.icon && <Icon name={tag.icon} class="size-2.5" />}
                        {tag.label}
                      </span>
                    ),
                  )}
                </div>
              )}
            </div>
          </div>
        </div>
      )
    })
  }
</div>
