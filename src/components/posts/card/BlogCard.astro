---
import Link from '@/components/base/Link.astro'
import { Badge } from '@/components/ui/badge'
import {
  getCombinedReadingTime,
  getSubpostCount,
  isSubpost,
} from '@/lib/data-utils'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import type { CollectionEntry } from 'astro:content'

interface Props {
  entry: CollectionEntry<'blog'>
}

const { entry } = Astro.props
const formattedDate = formatDate(entry.data.date)
const readTime = await getCombinedReadingTime(entry.id)
const subpostCount = !isSubpost(entry.id) ? await getSubpostCount(entry.id) : 0
---

<div
  class="hover:bg-muted/50 overflow-hidden rounded-lg transition-all duration-300 ease-in-out hover:scale-[1.01] hover:shadow-lg"
>
  <Link href={`/${entry.collection}/${entry.id}`} class="flex flex-col">
    <div class="flex flex-col p-4">
      <h3 class="mb-1 text-lg font-bold">
        {entry.data.title}
      </h3>
      <p class="text-muted-foreground mb-1.5 text-sm">
        {entry.data.description}
      </p>

      <p class="text-muted-foreground/60 mb-4 text-xs">
        <span>{formattedDate}</span> &nbsp;•&nbsp; {readTime}
        {
          subpostCount > 0 && (
            <>
              &nbsp;•&nbsp; {subpostCount}{' '}
              {subpostCount === 1 ? ' subpost' : ' subposts'}
            </>
          )
        }
      </p>

      {
        entry.data.tags && (
          <div class="flex flex-wrap gap-1.5">
            {entry.data.tags.map((tag: string) => (
              <Badge
                variant="muted"
                className="flex bg-muted/30 border border-border items-center gap-x-1"
              >
                <Icon name="lucide:hash" class="size-2.5" />
                {tag}
              </Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>
