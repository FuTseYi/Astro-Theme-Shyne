{
  "name": "astro-theme-shyne",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": ["sharp", "esbuild"]
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prettier": "prettier --write **/*.{ts,tsx,css,astro} --ignore-path .gitignore",
    "import:obsidian": "node scripts/import-obsidian.mjs",
    "import-and-commit:obsidian": "node scripts/import-and-commit.mjs",
    "publish:devto": "node scripts/publish-devto.mjs",
    "publish:medium": "node scripts/publish-medium.mjs"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@expressive-code/plugin-collapsible-sections": "^0.41.5",
    "@expressive-code/plugin-line-numbers": "^0.41.5",
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.64",
    "@iconify/react": "^6.0.2",
    "@shikijs/rehype": "^1.29.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "astro": "^5.16.15",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "hastscript": "^9.0.1",    
    "lucide-react": "^0.562.0",
    "mdast-util-to-string": "^4.0.0",    
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "reading-time": "^1.5.0",
    "rehype-components": "^0.3.0",    
    "rehype-expressive-code": "^0.41.6",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "remark-directive": "^4.0.0",    
    "remark-emoji": "^5.0.2",
    "remark-github-admonitions-to-directives": "^2.1.0",    
    "remark-math": "^6.0.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      },
      {
        "files": "*.jsonc",
        "options": {
          "trailingComma": "none"
        }
      }
    ]
  }
}
